#ifndef __DS18B20_H__
#define __DS18B20_H__

#include <Arduino.h>

class DS18B20
{
public:
	// index starts from 0
	// It is the position of the sensor on the bus. It is consistent as long as
	// sensors are connected and no sensors are removed or added.
	// Basically it is the index in which sensor appears during searcing on the bus.
	DS18B20(byte index);

};


#endif // __DS18B20_H__
